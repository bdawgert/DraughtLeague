@{
    ViewBag.Title = "BeerItForward | Forgot Password";
}

<div class="body-content" style="width: 500px">

    <h2>Forgot Your Password?</h2>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div style="width: 400px; margin: auto">
            <div class="form-row" style="margin-bottom: 15px">
                <div class="form-label" style="width: 150px">
                    Email Address
                </div>
                <div style="text-align: right">
                    @Html.TextBox("email", null, new {style="width: 280px"})
                </div>
            </div>
        </div>

        <div style="text-align: center">
            <input type="submit"  value="Email Link" />
        </div>
        
    }

</div>

@section Scripts {

}
